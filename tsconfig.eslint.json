{
  "extends": "./tsconfig.json",
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.test.ts",
    "packages/*/src/**/*.test.tsx",
    "packages/*/__tests__/**/*.ts",
    "packages/*/__tests__/**/*.tsx"
  ],
  "exclude": [
    "packages/*/tailwind.config.ts",
    "packages/*/next-env.d.ts",
    "**/node_modules/**"
  ]
}

