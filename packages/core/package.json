{
  "name": "@conscious-bot/core",
  "version": "0.1.0",
  "description": "Core cognitive modules for conscious bot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "start": "node dist/server.js",
    "dev:server": "tsx src/server.ts",
    "test:bot-connection": "vitest run src/__tests__/bot-connection.test.ts",
    "test:action-execution": "vitest run src/__tests__/action-execution.test.ts",
    "test:real-capability": "vitest run src/__tests__/real-capability-execution.test.ts",
    "test:simple-actions": "vitest run src/__tests__/simple-actions.test.ts",
    "test:cognitive-stream": "vitest run src/__tests__/cognitive-stream-validation.test.ts",
    "test:narrative-thoughts": "vitest run src/__tests__/narrative-thoughts.test.ts",
    "test:working-bot": "vitest run src/__tests__/working-bot.test.ts",
    "test:version-compatibility": "vitest run src/__tests__/version-compatibility.test.ts",
    "test:simple-server": "vitest run src/__tests__/simple-server.test.ts"
  },
  "dependencies": {
    "@types/semver": "^7.7.0",
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.0",
    "mineflayer": "^4.32.0",
    "mineflayer-pathfinder": "^2.4.1",
    "semver": "^7.7.2",
    "uuid": "^9.0.1",
    "vec3": "^0.1.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^9.0.0",
    "@vitest/ui": "^3.2.4",
    "fast-check": "^4.2.0",
    "supertest": "^6.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
