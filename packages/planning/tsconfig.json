{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist", 
    "node_modules", 
    "src/server.ts", 
    "src/skill-integration/**/*",
    "src/__tests__/autonomous-task-execution.test.ts",
    "src/__tests__/integrated-planning-system.test.ts",
    "src/__tests__/planning-integration.test.ts",
    "src/__tests__/server-autonomous-startup.test.ts",
    "src/behavior-trees/__tests__/BehaviorTreeRunner.test.ts"
  ]
}
