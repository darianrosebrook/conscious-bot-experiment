{
  "name": "@conscious-bot/memory",
  "version": "0.1.0",
  "description": "Multi-store memory system with provenance tracking and GraphRAG-first retrieval",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "dev:server": "tsx src/server.ts",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:memory-integration": "vitest run src/__tests__/memory-llm-integration.test.ts",
    "test:ollama-memory": "vitest run src/__tests__/ollama-memory-integration.test.ts",
    "test:complete-flow": "vitest run src/__tests__/complete-cognitive-flow.test.ts",
    "test:asset-memory": "vitest run src/asset/__tests__/asset-memory-acceptance.test.ts",
    "test:reflection-contract": "vitest run src/__tests__/reflection-persistence-contract.test.ts",
    "test:reflection-integration": "POSTGRES_AVAILABLE=true MEMORY_ALLOW_DEDUPE_CLEANUP=true vitest run src/__tests__/reflection-persistence-integration.test.ts",
    "soak:pipeline": "tsx src/__tests__/reflection-soak-harness.ts --pipeline",
    "soak:quality": "tsx src/__tests__/reflection-soak-harness.ts --quality",
    "soak:both": "tsx src/__tests__/reflection-soak-harness.ts --both",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@conscious-bot/world": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "ollama": "^0.5.0",
    "pg": "^8.11.0",
    "rxjs": "^7.8.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@testcontainers/postgresql": "^10.28.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "testcontainers": "^10.28.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "memory",
    "episodic",
    "semantic",
    "working-memory",
    "graphrag",
    "provenance"
  ],
  "author": "@darianrosebrook",
  "license": "MIT"
}
