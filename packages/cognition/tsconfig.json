{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "references": [
    { "path": "../core" },
    { "path": "../memory" },
    { "path": "../planning" }
  ],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
