{
  "name": "@conscious-bot/minecraft-interface",
  "version": "0.1.0",
  "description": "Minecraft integration layer for conscious bot planning system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mc-smoke": "dist/bin/mc-smoke.js",
    "mc-standalone": "dist/bin/mc-standalone.js",
    "mc-simple": "dist/bin/mc-simple.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:standalone": "jest --testPathPattern=standalone.test.ts",
    "smoke:tier0": "npm run build && node dist/bin/mc-smoke.js --scenario=navigate",
    "smoke:tier1": "npm run build && node dist/bin/mc-smoke.js --scenario=gather-wood",
    "standalone": "npm run build && node dist/bin/mc-standalone.js",
    "standalone:basic": "npm run build && node dist/bin/mc-standalone.js --scenario=basic",
    "standalone:navigation": "npm run build && node dist/bin/mc-standalone.js --scenario=navigation",
    "standalone:inventory": "npm run build && node dist/bin/mc-standalone.js --scenario=inventory",
    "standalone:crafting": "npm run build && node dist/bin/mc-standalone.js --scenario=crafting",
    "simple": "npm run build && node dist/bin/mc-simple.js",
    "simple:connect": "npm run build && node dist/bin/mc-simple.js --action=connect",
    "simple:move": "npm run build && node dist/bin/mc-simple.js --action=move",
    "simple:turn": "npm run build && node dist/bin/mc-simple.js --action=turn",
    "simple:jump": "npm run build && node dist/bin/mc-simple.js --action=jump",
    "simple:chat": "npm run build && node dist/bin/mc-simple.js --action=chat",
    "build:simple": "node build-simple.js",
    "sim": "node dist-simple/bin/mc-sim.js",
    "sim:demo": "node dist-simple/bin/mc-sim.js --action=demo",
    "sim:connect": "node dist-simple/bin/mc-sim.js --action=connect",
    "sim:move": "node dist-simple/bin/mc-sim.js --action=move",
    "sim:mine": "node dist-simple/bin/mc-sim.js --action=mine",
    "sim:place": "node dist-simple/bin/mc-sim.js --action=place",
    "sim:stats": "node dist-simple/bin/mc-sim.js --action=stats",
    "integration-test": "npx tsx bin/mc-integration-test.ts",
    "test:integration": "npx tsx bin/mc-integration-test.ts",
    "test:integration:verbose": "npx tsx bin/mc-integration-test.ts --verbose",
    "test:planning:hrm": "npx tsx bin/mc-integration-test.ts --strategy=hrm_first --verbose",
    "test:planning:llm": "npx tsx bin/mc-integration-test.ts --strategy=llm_first --verbose",
    "test:planning:adaptive": "npx tsx bin/mc-integration-test.ts --strategy=adaptive --verbose",
    "demo:integration": "npx tsx src/quick-integration-demo.ts",
    "demo:quick": "npx tsx src/quick-integration-demo.ts"
  },
  "dependencies": {
    "@conscious-bot/planning": "workspace:*",
    "@conscious-bot/core": "workspace:*",
    "mineflayer": "^4.17.0",
    "mineflayer-pathfinder": "^2.4.1",
    "vec3": "^0.1.8",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.2",
    "ts-jest": "^29.1.1"
  },
  "keywords": [
    "minecraft",
    "planning",
    "cognitive-architecture",
    "mineflayer"
  ],
  "author": "@darianrosebrook",
  "license": "MIT"
}
